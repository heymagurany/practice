@{
    ViewBag.Title = "Arc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="map-canvas" />
@section scripts
{
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC4IrIT_byOV1Ov6SwGoTjnKnXtRfKwMRo&libraries=geometry&sensor=false"></script>
    <script type="text/javascript" src="~/Scripts/v3_epoly.js"></script>
    <script type="text/javascript" src="~/Scripts/optmzr.maps.irrigation.js"></script>
    <script type="text/javascript">
        (function () {
            function initialize() {
                var myOptions = {
                    zoom: 17,
                    center: new google.maps.LatLng(40.26958832110609, -87.13052988052368),
                    mapTypeControl: true,
                    mapTypeControlOptions: {
                        style: google.maps.MapTypeControlStyle.DROPDOWN_MENU
                    },
                    navigationControl: true,
                    mapTypeId: google.maps.MapTypeId.SATELLITE
                }
                var map = new google.maps.Map(document.getElementById("map-canvas"), myOptions);
                var irrigation = new optmzr.IrrigationControl(map);

                map.controls[google.maps.ControlPosition.LEFT_BOTTOM].push(irrigation.getElement());
            }

            google.maps.event.addDomListener(window, "load", initialize);
        })(jQuery);
    </script>
}