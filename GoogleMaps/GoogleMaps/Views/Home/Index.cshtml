@{
    ViewBag.Title = "Index";
}
<div id="map-canvas" />
@section scripts
{
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC4IrIT_byOV1Ov6SwGoTjnKnXtRfKwMRo&libraries=drawing&sensor=false"></script>
    <script type="text/javascript">
        var westLafayette = new google.maps.LatLng(40.465952, -86.928099);

        // Create a div to hold the control.
        var controlDiv = document.createElement('div');

        // Set CSS styles for the DIV containing the control
        // Setting padding to 5 px will offset the control
        // from the edge of the map.
        controlDiv.style.padding = '5px';

        // Set CSS for the control border.
        var controlUI = document.createElement('div');
        controlUI.style.backgroundColor = 'white';
        controlUI.style.borderStyle = 'solid';
        controlUI.style.borderWidth = '2px';
        controlUI.style.cursor = 'pointer';
        controlUI.style.textAlign = 'center';
        controlUI.title = 'Click to set the map to Home';
        controlDiv.appendChild(controlUI);

        // Set CSS for the control interior.
        var controlText = document.createElement('div');
        controlText.style.fontFamily = 'Arial,sans-serif';
        controlText.style.fontSize = '12px';
        controlText.style.paddingLeft = '4px';
        controlText.style.paddingRight = '4px';
        controlText.innerHTML = '<strong>Home</strong>';
        controlUI.appendChild(controlText);

        function initialize() {
            var mapOptions = {
                center: westLafayette,
                zoom: 12
            };

            var map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions);
            
            google.maps.event.addDomListener(controlUI, 'click', function () {
                map.setCenter(westLafayette);
            });

            map.controls[google.maps.ControlPosition.TOP_RIGHT].push(controlDiv);

            google.maps.event.addListener(map, "click", function (e) {
                alert("clicked on " + e.latLng);
            });

            var drawingManagerOptions = {
                drawingControl: true,
                drawingControlOptions: {
                    position: google.maps.ControlPosition.TOP_CENTER,
                    drawingModes: [
                      google.maps.drawing.OverlayType.CIRCLE,
                      google.maps.drawing.OverlayType.POLYLINE
                    ]
                },
                circleOptions : {
                    clickable: true,
                    draggable: true,
                    editable: true,
                    fillColor: "#0000FF",
                    fillOpacity: 0.3,
                    strokeColor: "#0000FF",
                    strokeOpacity: 0.8,
                    strokeWeight: 2
                },
                polylineOptions: {
                    clickable: true,
                    draggable: true,
                    editable: true
                }
            };
            var drawingManager = new google.maps.drawing.DrawingManager(drawingManagerOptions);
            drawingManager.setMap(map);

            var updatePivotCoords = function (circle) {
                var bounds = circle.getBounds();
                var center = circle.getCenter();
                var radius = circle.getRadius();
            };

            google.maps.event.addListener(drawingManager, 'circlecomplete', function (circle) {
                updatePivotCoords(circle);

                google.maps.event.addListener(circle, "center_changed", function () {
                    updatePivotCoords(circle);
                });

                google.maps.event.addListener(circle, "radius_changed", function () {
                    updatePivotCoords(circle);
                });
            });

            google.maps.event.addListener(drawingManager, 'polylinecomplete', function (polyline) {
                drawingManager.setDrawingMode(null);

                google.maps.event.addListener(polyline, 'dragend', function (e) {
                });
            });
        }

        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
}